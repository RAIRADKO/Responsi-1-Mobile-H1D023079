<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F4F4F4"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp">

            <ImageView
                android:id="@+id/iv_stadium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/stadium_image_description"
                android:scaleType="centerCrop"
                android:src="@drawable/southampton_stadium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#50000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_logo"
                    android:contentDescription="@string/club_logo_description" />

                <TextView
                    android:id="@+id/tv_club_name_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/club_name"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:layout_marginTop="12dp"/>

            </LinearLayout>

        </FrameLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_club_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#FFE5E5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_club_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/club_description_text"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="4dp"
                    android:justificationMode="inter_word"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card Club History -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_club_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_ball"
                    android:contentDescription="@string/club_history_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Club History"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="normal" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card Head Coach -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_coach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_coach"
                    android:contentDescription="@string/head_coach_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Head Coach"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="normal" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card Team Squad -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_squad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_player"
                    android:contentDescription="@string/team_squad_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Team Squad"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="normal" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>